{
  "name": "emoji-transmogrifier",
  "description": "a handy little library for converting emoji short codes to html image tags",
  "homepage": "https://edm00se.github.io/emoji-transmogrifier",
  "author": {
    "name": "Eric McCormick",
    "email": "edm00se@gmail.com",
    "url": "https://edm00se.codes/emoji-transmogrifier"
  },
  "version": "0.0.0-semantically-released",
  "files": [
    "src",
    "example.js"
  ],
  "engines": {
    "node": ">=4.5.0",
    "npm": ">=3.0.0"
  },
  "main": "./src/server/index.js",
  "bin": "./src/cli/index.js",
  "keywords": [
    "emoji",
    "image",
    "convert"
  ],
  "scripts": {
    "precommit": "lint-staged && npm run test",
    "commit": "git-cz",
    "prepublish": "nsp check",
    "test": "jest --coverage",
    "watch": "jest --watchAll --coverage",
    "format": "prettier-eslint \"src/**/*.js\" --write",
    "lint": "eslint **/*.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/edm00se/emoji-transmogrifier.git"
  },
  "dependencies": {
    "commander": "2.9.0",
    "glob": "7.1.1",
    "update-notifier": "2.1.0"
  },
  "devDependencies": {
    "array-equal": "1.0.0",
    "chai": "4.0.0-canary.2",
    "codecov": "2.2.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "eslint-config-xo-space": "0.16.0",
    "eslint-formatter-pretty": "1.1.0",
    "husky": "0.13.3",
    "istanbul": "1.1.0-alpha.1",
    "jest": "20.0.1",
    "lint-staged": "3.4.1",
    "nsp": "2.6.3",
    "prettier-eslint-cli": "3.4.3",
    "semantic-release": "6.3.6"
  },
  "tonicExampleFilename": "example.js",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
